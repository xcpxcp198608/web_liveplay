<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wiatec.liveplay.dao.AdImageDao">
    <resultMap type="com.wiatec.liveplay.entities.ImageInfo" id="imageInfo">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="url" property="url"/>
        <result column="link" property="link"/>
    </resultMap>

    <sql id="selectAll">SELECT id, name, url, link FROM adimage</sql>

    <select id="selectAll" resultMap="imageInfo">
        <include refid="selectAll"/>
    </select>

    <select id="selectById" resultMap="imageInfo" parameterType="int">
        <include refid="selectAll"/>
        WHERE id = #{_parameter}
    </select>

    <delete id="deleteById" parameterType="int">
        DELETE FROM adimage WHERE id = #{_parameter}
    </delete>

    <insert id="insertOne" parameterType="com.wiatec.liveplay.entities.ImageInfo">
        INSERT INTO adimage (name, url, link) VALUES (#{name}, #{url}, #{link})
    </insert>

    <update id="updateOne" parameterType="com.wiatec.liveplay.entities.ImageInfo">
        UPDATE adimage SET name= #{name} , url = #{url}, link= #{link} WHERE id= #{id}
    </update>

</mapper>